{
  "name": "clipboard-manager",
  "version": "1.1.1",
  "description": "A clipboard manager app with history and search",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --arm64"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.clipboard.manager",
    "productName": "Clipboard Manager",
    "asar": true,
    "compression": "maximum",
    "icon": "build/icon.icns",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": "arm64"
        },
        {
          "target": "zip",
          "arch": "arm64"
        }
      ],
      "minimumSystemVersion": "11.0",
      "electronLanguages": ["en"]
    },
    "files": [
      "main.js",
      "preload.js",
      "shortcut-preload.js",
      "index.html",
      "shortcut.html",
      "styles.css",
      "renderer.js",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,readme.md,README,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*/*.d.ts",
      "!node_modules/.cache"
    ]
  }
}
